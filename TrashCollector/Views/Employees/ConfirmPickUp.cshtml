@model TrashCollector.Models.Customer
@{
    ViewData["Title"] = "ConfirmPickUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirm Pick-Up</h1>
<form asp-action="ConfirmPickUp">
    <div class="form-group">
        <label class="control-label">Confirm Pick-Up:</label>
        <input class="form-control" name="TrashCollected" />
    </div>
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
